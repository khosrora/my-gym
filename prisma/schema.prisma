// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  userCode    Int      @default(autoincrement())
  phoneNumber String   @unique
  GymId       Gym?     
  email       String?   
  fullname    String?   
  role        USERROLE @default(CLIENT)
  codeOtp     Int
  createdAt   DateTime @default(now())
}

model Gym {
  id          Int      @id @default(autoincrement())
  user        User @relation(fields: [userId], references: [id])
  userId      Int  @unique
  uniqueCode  Int      
  persianName String
  englishName String
  phoneNumber String?
  address     String?
  managerName String?
  lat         String?
  long        String?
  description String?
  isOpen      Boolean? @default(true) 
  expiresTime Int
}


enum USERROLE  {
  CLIENT 
  MANAGER 
  COACH
}